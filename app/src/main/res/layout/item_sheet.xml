<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"

        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Drag Handle -->
            <ImageView
                android:id="@+id/dragHandle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_drag_indicator_24"
                android:contentDescription="Drag to reorder"
                android:layout_marginEnd="12dp" />

            <!-- Divider -->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"
                android:layout_marginEnd="12dp" />

            <!-- Canvas Preview -->
            <ImageView
                android:id="@+id/canvas"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/spinner_background" />

            <!-- Divider -->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"
                android:layout_marginEnd="12dp" />

            <!-- Sheet Name -->
            <TextView
                android:id="@+id/tvSheetName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sheet 1"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDeleteSheet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete sheet"
                app:tint="#D32F2F" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
