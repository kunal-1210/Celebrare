<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#7D3BE0"
        android:elevation="4dp"
        android:titleTextColor="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
    <ImageView
        android:id="@+id/logoImage"
        android:layout_gravity="end|center_vertical"
        android:layout_width="0dp"
        android:padding="6dp"
        android:layout_weight="4"
        android:layout_height="match_parent"

        android:src="@drawable/celebrare_logo"
        />
            <ImageView

                android:layout_gravity="end|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_margin="10dp"

                />
        </LinearLayout>

    <!-- Company Name -->

    </androidx.appcompat.widget.Toolbar>

    <!-- Canvas Area -->
    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <!-- Custom Canvas -->
        <com.example.celebrare.CustomCanvasView
            android:id="@+id/customCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"/>

        <!-- Undo / Redo Buttons over Canvas -->

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_margin="8dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Select Font:"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="4dp"/>

                <Spinner
                    android:id="@+id/spinnerFonts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:padding="8dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text=" Size:" />
            <!-- Font Size -->
            <Spinner
                android:id="@+id/spinnerFontSize"
                android:layout_width="70dp"
                android:gravity="start"
                android:layout_height="wrap_content"

                android:padding="8dp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Bottom Toolbar -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fillViewport="true"
        android:padding="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Space
                android:layout_width="2dp"
                android:layout_height="wrap_content" />
            <!-- Font Selector -->

            <!-- Bold -->
            <ImageView
                android:id="@+id/btnBold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:contentDescription="Bold"
                android:padding="6dp"
                android:src="@drawable/ic_bold" />

            <Space
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <!-- Italic -->
            <ImageView
                android:id="@+id/btnItalic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:contentDescription="Italic"
                android:padding="6dp"
                android:src="@drawable/ic_italic" />

            <Space
                android:layout_width="2dp"
                android:layout_height="wrap_content" />


            <!-- Underline -->
            <ImageView
                android:id="@+id/btnUnderline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:contentDescription="Underline"
                android:padding="6dp"
                android:src="@drawable/ic_underline" />

            <Space
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <!-- Text Color -->
            <ImageView
                android:id="@+id/btnTextColor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#DDDDDD"
                android:contentDescription="Text Color"
                android:padding="6dp"
                android:src="@drawable/ic_textcolor" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="=" />

            <View
                android:id="@+id/colorPreview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"/>

            <Space
                android:layout_width="2dp"
                android:layout_height="wrap_content" />


            <Space
                android:layout_width="2dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Undo"/>

            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="Redo"/>

            <Space
                android:layout_width="2dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/btnDel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=" Delete "
                android:elevation="2dp"
                android:padding="2dp"
                android:textSize="19sp"
                android:backgroundTint="@color/white"
                android:background="@drawable/spinner_background"
                android:contentDescription="delete"/>

        </LinearLayout>
    </HorizontalScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btnAddText"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Add Text"
        android:background="@drawable/spinner_background"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Update Text"
        android:background="@drawable/spinner_background"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"/>
</LinearLayout>
    </LinearLayout>

